  <div class="field form-group">
    <%= form.label :Last_name %>
    <%= form.text_field :Last_name, class: 'form-control', placeholder: "Last Name"   %>
  </div>

  <div class="field form-group">
    <%= form.label :Email %>
    <%= form.text_field :Email, class: 'form-control', placeholder: "Email"   %>
  </div>

  <div class="field form-group">
    <%= form.label :Phone %>
    <%= form.text_field :Phone, class: 'form-control', class: 'form-control', placeholder: "Phone"     %>
  </div>

  <div class="field form-group">
    <%= form.label :twitter %>
    <%= form.text_field :twitter, class: 'form-control', class: 'form-control', placeholder: "Twitter"     %>
  </div>

  <div class="field form-group">

    <%= form.number_field :user_id, id: :friend_user_id, class: 'form-control', class: 'form-control', value: current_user.id,type: :hidden %>

